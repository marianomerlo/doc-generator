html
  head
    title= title
    link(
      rel='stylesheet'
      href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
      integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u'
      crossorigin='anonymous'
    )
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(
      src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'
      integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa'
      crossorigin='anonymous'
    )
  body(style='margin-left:30px')
    h1= 'Hola'
    h2= 'Este es el listado de textos disponibles: '
    ol
      each opera in operas
        li= opera.title

    h2= 'Por favor, completa el siguiente formulario y luego presiona el boton "Generar Documento"'

    div
      form(action='/basic',method='post')
        div.form-group
          label Escribe todos los numeros de los textos que quieras en tu documento, ordenados, y separados por coma. Ej: 4,1,2
          input.form-control(
            type='text'
            name='elections'
            style='width:500px;border:1px solid'
          )
        div.form-group
          label Escribe el nombre con el que quieres que se genere tu documento
          input.form-control(
            type='text'
            name='docName'
            style='width:500px;border:1px solid'
          )

        input.btn.btn-default(type='submit', value='Generar Documento')
